{
  "private": true,
  "workspaces": [
    "modules/*",
    "modules/*/samples",
    "tools/*"
  ],
  "scripts": {
    "commit": "commit",
    "postinstall": "npx plugin build icons"
  },
  "dependencies": {
    "animejs": "^3.0.1",
    "cascader": "^0.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/prompt-cli": "^8.1.0",
    "@pluginjs/browserslist-config": "*",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^22.12.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lerna": "^3.16.1",
    "lint-staged": "^9.2.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "prettier-package-json": "^2.1.0",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.1",
    "stylelint-scss": "^3.9.2"
  },
  "browserslist": [
    "extends @pluginjs/browserslist-config"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "git add"
    ],
    "**/package.json": [
      "prettier-package-json --key-order private,name,description,license,author,maintainers,contributors,homepage,repository,bugs,version,workspaces,category,main,module,umd,unpkg,jsdelivr,source,style,sass,browser,man,preferGlobal,bin,files,directories,scripts,config,optionalDependencies,dependencies,bundleDependencies,bundledDependencies,peerDependencies,devDependencies,globals,keywords,engines,jest --write",
      "git add"
    ]
  },
  "scope": "pluginjs"
}
